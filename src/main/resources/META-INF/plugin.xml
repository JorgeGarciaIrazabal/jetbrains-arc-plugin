<idea-plugin>
    <id>com.your.company.unique.plugin.id</id>
    <name>ArcUi</name>
    <version>0.1</version>
    <vendor email="jirazabal@flatiron.com" url="http://www.flatiron.com">Flatiron</vendor>

    <description><![CDATA[
      Enter short description for your plugin here.<br>
      <em>most HTML tags may be used</em>
    ]]></description>

    <change-notes><![CDATA[
      Add change notes here.<br>
      <em>most HTML tags may be used</em>
